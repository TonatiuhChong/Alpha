<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:orientation="vertical">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarRegistro"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay" />
    <TextView
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Por favor, toca la camara para seleccionar tu foto de perfil"/>

    <ImageView
        android:id="@+id/Foto"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:src="@mipmap/cameraregister_round" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/RegistroEmail"/>

    <EditText
        android:id="@+id/REmail"
        android:hint="Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/RegistroUsuario"/>
    <EditText
        android:id="@+id/Rusuario"
        android:hint="Escribe tu nombre de usuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/RefPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/RegistroPassword"
        android:clickable="true"/>

    <EditText
        android:id="@+id/Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Escribe tu contraseña"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/RefPassword2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/RegistroPassword" />

    <EditText
        android:id="@+id/Password2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Escribe nuevamente tu contraseña"
        android:inputType="textPassword" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/VerificarEmail"
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="@string/VerificacionEmail" />

        <Button
            android:id="@+id/EntrarMenu"
            style="@android:style/Widget.Holo.Button.Small"
            android:layout_width="178dp"
            android:layout_height="wrap_content"
            android:shadowColor="@color/colorPrimary"
            android:text="Entrar"
            android:textAlignment="center"
            android:textColorLink="@color/design_default_color_primary_dark" />
    </LinearLayout>
    <Button
        android:id="@+id/Registrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrarme"/>

    <Button
        android:id="@+id/Login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ya tienes cuenta? Inicia sesión"/>

</LinearLayout>